/* 导航栏 */

.navigation {
  width: 100%;
  height: 83rpx;
  padding-left: 20rpx;
  padding-top: 5vh;
  background: #1aad19;
  border: 1px #1aad19 solid;
  display: flex;
}

/* 导航栏标题 */

.navigation-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 400;
}

/* 上标题卡片 */

.titlecard {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-bottom: 10rpx;
  height: 164rpx;
  background: #1aad19;
  margin-bottom: 10rpx;
}

/* dgimn号 */

.dgimn {
  margin: 15rpx;
  font-size: 22rpx;
  color: #fff;
}

/* 排口名称 */

.name-text {
  font-size: 28rpx;
  color: #fff;
}

/* 点信息 */
.point-view {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  color: #fff;
  font-size: 20rpx;
  justify-content: space-around;
}

/* 点类型 */

.point-type {
  font-size: 26rpx;
  width: 30%;
  text-align: center;
}

/* 污染物状态 */

.point-state {
  display: flex;
  border-left: 1rpx solid rgba(255, 255, 255, 0.733);
  border-right: 1rpx solid rgba(255, 255, 255, 0.733);
  font-size: 26rpx;
  height: 30rpx;
  width: 40%;
}
/* 状态名称 */
.name-state-name {
  padding-left: 40rpx;
  width: 50%;
}

/* 点样式 */
.name-state-z {
  color: #60fc3b;
  font-size: 40rpx;
  line-height: 25rpx;
}
/* 状态 */
.name-state-text {
  width: 50%;
}
/* 污染物类型 */
.point-polltype {
  font-size: 26rpx;
  width: 30%;
  text-align: center;
}
/* 列表 */
.swiper-item {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  max-height: 72vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
/* 列表 */
.list-item {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px #f3f3f3 solid;
  display: flex;
  flex-direction: row;
  justify-content:  space-around;
  align-items: center;
  font-size: 26rpx;
  color: #555555;

}
/* 列表 */
.list-item-text-right {
  color: #656565;
  width: 40%;
 padding-right: 50rpx;
  text-align: right;

}

.list-item-text-left {
  color: #B2B2B2;
  padding-left: 50rpx;
  width: 50%;
 padding-right: 230rpx;
  text-align: left;
}
/* 换行列表 */
.list-item-newline{
width: 100%;

  display: flex;
  flex-direction: row;
  justify-content:  space-around;
  align-items: center;
  font-size: 26rpx;
  color: #555555;
}
.list-item-newline-left{
  color: #B2B2B2;
  padding-left: 50rpx;
  width: 10%;
 padding-right: 230rpx;
  text-align: left;

}
.list-item-newline-right{
padding-top: 10px;
padding-bottom: 10px;
    color: #B2B2B2;
  width: 70%;
 padding-right: 50rpx;
