/* pages/historyData/home/home.wxss */

.tab-text-color {
  font-size: 30rpx;
  color: #666;
}

.tab-text-color.active {
  font-size: 30rpx;
  color: #4499f0;
}

.margin-top {
  margin-top: 20rpx !important;
}

ec-canvas {
  position: absolute;
  width: 100%;
  height: 45vh;
  background-color: #fff;
  margin-top: 20rpx;
  z-index: 0;
}

button {
  margin: 10px;
}

.data-tag {
  background-image: url(/images/exception.png);
  background-size: 100% 100%;
  width: 80rpx;
  height: 45rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.cover-view {
  position: absolute;
  top: calc(40% - 150rpx);
  left: calc(50% - 300rpx);
  /* opacity: .7; */
}

.flex-wrp {
  display: flex;
  width: 50vh;
  height: 50vh;
  border-radius: 2%;
  /* padding: 20rpx; */
}

.flex-bg {
  position: absolute;
  background-color: #666;
  width: 100%;
  height: 100vh;
  opacity: 0.7;
  z-index: 9999;
}

.list-view {
  height: 34vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
