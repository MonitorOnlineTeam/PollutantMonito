<view class="warp">
  <image src="/images/background_blue.png" class='imageClass blue'></image>
  <image src="/images/background_grey.png" class='imageClass gray'></image>

  <view class="warp-container">
    <view class="warp-title">
      <text>请输入手机号</text>
    </view>

    <view class="warp-input">
      <input type='number' maxlength="11" name='input' bindinput='phone' value='{{phoneCode}}' placeholder="请输入手机号"></input>
      <view class="warp-validateMessage">
        <text>{{message}}</text>
      </view>
    </view>
    <view class="warp-button">
      <button bindtap="btnLogin">验证</button>
    </view>
  </view>

</view>