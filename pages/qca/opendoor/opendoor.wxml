  <!-- <view class="cu-form-group margin-top">
    <view class="title">质控仪
      <span class="valC"></span>
    </view>
  </view> -->
  <view class="cu-form-group margin-top">
    <view class="title">仪器名称</view>
    <input placeholder="{{QCAName}}" disabled="true"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">地址</view>
    <input placeholder="{{QCAAddress}}" disabled="true"></input>
  </view>

  <view class="cu-form-group margin-top">
    <view class="title">维护原因
      <span class="valC"></span>
    </view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker text-gray" style="text-align: left;">
        {{picker[index]}}
      </view>
    </picker>
  </view>


  <!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
  <!-- <view class="cu-form-group margin-top">
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入维护原因"></textarea>
	</view> -->
  <view class="cu-form-group align-start">
    <view class="title" style="">备注
      <span class="valC"></span>
    </view>
    <textarea disabled="{{isOpening}}" value="{{isOpening?'':textareaBValue}}" class=" text-gray" maxlength="-1" bindinput="textareaBInput" placeholder="{{isOpening?'':'请输入'}}" style="margin-top:18rpx;"></textarea>
  </view>

  <button class="cu-btn block bg-blue margin-tb-sm lg" type="button" bindtap='openlock' style="width: 90%;margin-left: 5%;margin-right: 5%;">开 锁</button>
  <view class="remark">
    <span>开门后将全程录像</span>
  </view>
</form>


<view class="cu-modal {{isOpening?'show':''}} " bindtap="hideChangeModal">
<!-- <view class="cu-modal show" bindtap="hideChangeModal"> -->
  <view class="cu-dialog" catchtap style="z-index:9999">
    <view class="cu-bar bg-white justify-end">
      <view class="content" style="">{{QCAName}}</view>
      <!-- <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red" bindtap="hideChangeModal"></text>
      </view> -->
    </view>
    <view class="opendoorgif" style="height:600rpx;">
      <image src="https://api.chsdl.net/NewWryWebProxy/images/qca/opendoor.gif" style="width:300rpx;height:100%"></image>
    </view>

    <view class="btnfooter">
      <button class="block bg-blue margin-tb-sm shadow">请在8秒内拉开门锁！</button>
    </view>
  </view>
</view>