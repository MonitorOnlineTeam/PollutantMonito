.navigation {
  width: 100%;
  height: 83rpx;
  padding-left: 20rpx;
  padding-top: 45rpx;
  background: #56a6ff;
}

.navigation-title {
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
}

.titlecard {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 164rpx;
  background: #56a6ff;
}

.titlecard-datetime {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.titlecard-datetime-time {
  width: 60%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.titlecard-datetime-box {
  width: 20%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.datetime-input {
  width: 90%;
  height: 48rpx;
  color: #56a6ff;
  font-size: 25rpx;
  line-height: 25px;
}

.titlecard-datetime-Arrow {
  height: 34rpx;
  width: 42rpx;
}

.input-picker {
  width: 100%;
}

.titlecard-polltype {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.titlecard-polltype-img {
  height: 18rpx;
  width: 20rpx;
}

.select-polltype {
  width: 30%;
  height: 48rpx;
  color: #fff;
  font-size: 25rpx;
  line-height: 25px;
  background: #56a6ff;
  border: 1px #fff solid;
  border-radius: 20px;
}

.tab-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 5px;
 justify-content:center;
}
.tab-view-box{
width: 80%;
  display: flex;
  flex-direction: row;
 border-radius: 5px;
 justify-content:center;
   border-bottom: #56a6ff 1px solid;
  border-top: #56a6ff 1px solid;
  border-left: #56a6ff 0px solid;
  border-right: #56a6ff 1px solid;

}
.tab-view-i {
  width: 25%;
  height: 50rpx;
  display: flex;
  border-bottom: #56a6ff 0px solid;
  border-top: #56a6ff 0px solid;
  border-left: #56a6ff 1px solid;
  border-right: #56a6ff 0px solid;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #56a6ff;
  line-height: 50rpx;
}
.tab-view-i-Left{
    width: 25%;
  height: 50rpx;
  display: flex;
  border-bottom: #56a6ff 0px solid;
  border-top: #56a6ff 0px solid;
  border-left: #56a6ff 1px solid;
  border-right: #56a6ff 0px solid;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #56a6ff;
  line-height: 50rpx;
   border-radius: 5px 0px 0px 5px;
}
.tab-view-select{
background: #56a6ff;
color: #fff;
}