  width: 100%;
  height: 40%;
  box-sizing: border-box;
  background-color: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}



/* 上标题卡片 */

.titlecard {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 164rpx;
  background: #3b98ff;
}

/* 时间选择 */

.titlecard-datetime {
  width: 100%;
  display: flex;
  flex-direction: row;
}

/* 时间选择 */

.titlecard-datetime-time {
  width: 60%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

/* 时间选择分布 */

.titlecard-datetime-box {
  width: 20%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

/* 时间选择空间 */

.datetime-input {
  width: 100%;
  height: 48rpx;
  color: #3b98ff;
  font-size: 25rpx;
  line-height: 48rpx;
}

/* 图标 */

.titlecard-datetime-Arrow {
  height: 20rpx;
  width: 20rpx;
}

/* 多列选择器 */

.input-picker {
  width: 100%;
}

/* 污染物选择卡片 */

.titlecard-polltype {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 污染物选择图标 */

.titlecard-polltype-img {
  height: 18rpx;
  width: 20rpx;
}

/* 污染物选择 */

.select-polltype {
  width: 35%;
  height: 48rpx;
  color: #fff;
  font-size: 25rpx;
  line-height: 42rpx;
  background: #3b98ff;
  border: 1px #fff solid;
  border-radius: 20px;
}

/* tab标签 */

.tab-view {
  background: #fff;
  width: 100%;
  padding-top: 5px;
}

/* tab标签 */

.tab-view-box {
  width: 80%;
  display: flex;
  flex-direction: row;
  border-radius: 5px;
  justify-content: center;
  border-bottom: #3b98ff 1px solid;
  border-top: #3b98ff 1px solid;
  border-left: #3b98ff 0px solid;
  border-right: #3b98ff 1px solid;
}

/* tab标签 */

.tab-view-i {
  width: 25%;
  height: 50rpx;
  display: flex;
  border-bottom: #3b98ff 0px solid;
  border-top: #3b98ff 0px solid;
  border-left: #3b98ff 1px solid;
  border-right: #3b98ff 0px solid;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #3b98ff;
  line-height: 50rpx;
}

/* tab标签 */

.tab-view-i-Left {
  width: 25%;
  height: 50rpx;
  display: flex;
  border-bottom: #3b98ff 0px solid;
  border-top: #3b98ff 0px solid;
  border-left: #3b98ff 1px solid;
  border-right: #3b98ff 0px solid;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
  color: #3b98ff;
  line-height: 50rpx;
  border-radius: 5px 0px 0px 5px;
}

/* tab标签 */

.tab-view-select {
  background: #3b98ff;
  color: #fff;
}

/* 图表大小 */

.canvas {
  background: #fff;
  width: 100vh;
  height: 25vh;
}

/* 列表 */

.list-view {
  height: 35vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.list-title-item {
  margin-top: 15.6rpx;
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-bottom: 1px #f3f3f3 solid;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #555;
}

/* 标题块 */

.list-item-title {
  width: 30%;
  text-align: center;
}

/* 文字块 */

.list-item {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px #f3f3f3 solid;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #555;
}

/* 文字块 */

